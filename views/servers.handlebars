<title>Servers - LenoxBot</title>
<main>
	<section id="servers" class="lb-bg-white">
		<div class="container">
			<div class="row">
				<div class="col-12 mt-4">
					<div class="alert alert-warning alert-dismissible fade show" role="alert">
						{{lang.website_servers_warning}}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				</div>
			</div>
			<div class="row">
				{{#each guilds}}
				<div class="col-12 col-md-6 col-lg-4 mb-4 text-center">
					<div class="card lb-feature-card shadow">
						<div class="card-body">
							<figure>
								{{#if lenoxbot}} {{#if icon}}
								<a href="dashboard/{{id}}/overview">
									<img id="icon-selectserver" class="rounded-circle"
										src="https://cdn.discordapp.com/icons/{{id}}/{{icon}}.jpg" height="120"
										width="120">
								</a>
								{{else}}
								<a href="dashboard/{{id}}/overview">
									<img id="icon-selectserver" class="rounded-circle" src="discordicon.png"
										height="120" width="120">
								</a>
								{{/if}} {{else}} {{#if icon}}
								<a href="https://lenoxbot.com/invite" target="blank">
									<img id="icon-selectserver" class="rounded-circle"
										src="https://cdn.discordapp.com/icons/{{id}}/{{icon}}.jpg" height="120"
										width="120">
								</a>
								{{else}}
								<a href="https://lenoxbot.com/invite" target="blanc">
									<img id="icon-selectserver" class="rounded-circle" src="discordicon.png"
										height="120" width="120">
								</a>
								{{/if}} {{/if}}
							</figure>
							{{#if premium}}
							<h5 class="card-title lb-textcap" style="color:rgb(219, 197, 73);"><i class="mdi mdi-star" title="LenoxBot Premium"></i> {{name}} <i class="mdi mdi-star"  title="LenoxBot Premium"></i></h5>
							{{else}}
							<h5 class="card-title lb-textcap">{{name}}</h5>
							{{/if}}
							<hr>
							{{#if lenoxbot}}
							<p class="card-text">{{memberscount}} {{../lang.website_servers_members}}</p>
							<div class="btn-group" role="group">
								<a href="/dashboard/{{id}}/overview" class="btn lb-btn-green"><i
										class="mdi mdi-chart-line"></i> {{../lang.website_servers_dashboard}}</a>
								<a href="/leaderboards/server/{{id}}" class="btn lb-btn-blue"><i
										class="mdi mdi-trophy-award"></i> {{../lang.website_servers_leaderboards}}</a>
							</div>
							{{else}}
							<p class="card-text lb-text-red">{{../lang.website_servers_hasnotlenoxbot}}</p>
							<a href="https://discordapp.com/oauth2/authorize?client_id=354712333853130752&scope=bot&permissions=8&guild_id={{id}}"
								class="btn lb-btn-invite" target="blanc"><i class="mdi mdi-discord"></i> {{../lang.website_servers_getlenoxbot}}</a>
							{{/if}}
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
</main>